<h1 class="restaurants-title">Hello Restaurants</h1>
<% @restaurants.each do |restaurant| %>
  <h2><%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
  <p><%= restaurant.address %> <%= link_to '', restaurant_path(restaurant), method: :delete, class: "far fa-trash-alt" %></p>
<% end %>

<%= link_to 'Create new restaurant', new_restaurant_path, class: "btn btn-primary" %>

<p>Bye!</p>
